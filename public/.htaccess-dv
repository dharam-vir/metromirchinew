<IfModule mod_rewrite.c>
    <IfModule mod_negotiation.c>
        Options -MultiViews -Indexes
    </IfModule>

    RewriteEngine On

    # Redirect non-www to www
    # RewriteCond %{HTTP_HOST} ^metromirchi\.com [NC]
    # RewriteRule ^(.*)$ https://www.metromirchi.com/$1 [L,R=301]

    # Handle Authorization Header
    RewriteCond %{HTTP:Authorization} .
    RewriteRule .* - [E=HTTP_AUTHORIZATION:%{HTTP:Authorization}]

    # Redirect Trailing Slashes If Not A Folder...
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_URI} (.+)/$
    RewriteRule ^ %1 [L,R=301]

    # Redirect 'public' folder to root
    # RewriteCond %{REQUEST_URI} ^/public/
    # RewriteRule ^public/(.*)$ /$1 [L,R=301]

    # Send Requests To Front Controller...
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^ index.php [L]

    # Security Headers (for audit)
    
    # HTTP Strict Transport Security (HSTS)
    #Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"

    # Content Security Policy (CSP) allowing fonts.bunny.net
    #Header always set Content-Security-Policy "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline' https://fonts.bunny.net; img-src 'self'; connect-src 'self'; font-src 'self' https://fonts.bunny.net; object-src 'none'; frame-ancestors 'none';"

    # X-Content-Type-Options
   # Header always set X-Content-Type-Options "nosniff"

    # X-Frame-Options
    #Header always set X-Frame-Options "DENY"

    # X-XSS-Protection
    #Header always set X-XSS-Protection "1; mode=block"

    # Referrer-Policy
    #Header always set Referrer-Policy "strict-origin-when-cross-origin"

    # Feature-Policy (for newer browsers)
    #Header always set Feature-Policy "geolocation 'none'; microphone 'none'; camera 'none'"

    # Permissions-Policy (modern header for controlling browser permissions)
    #Header always set Permissions-Policy "geolocation=(none), microphone=(none), camera=(none)"

    # Cache-Control
    #Header always set Cache-Control "no-store, no-cache, must-revalidate, proxy-revalidate"

    # Pragma
    #Header always set Pragma "no-cache"

    # Set the X-Permitted-Cross-Domain-Policies header to control Flash and Acrobat access
    #Header always set X-Permitted-Cross-Domain-Policies "none"

    # Expect-CT header
    #Header always set Expect-CT "max-age=86400, enforce, report-uri='https://metromirchi.com/'"
</IfModule>
